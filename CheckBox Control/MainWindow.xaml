<Window x:Class="CheckBox_Control.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckBox_Control"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="200">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Application Option</TextBlock>
            <CheckBox IsThreeState="True" x:Name="mainCheckBox" Click="mainCheckBox_Click">Enable All</CheckBox>
            <StackPanel Orientation="Vertical" Margin="10,0,0,0">
                <CheckBox x:Name="abcCheckBox" Click="nodeCheckBox_Click">Enable Feature ABC</CheckBox>
                <CheckBox x:Name="xyzCheckBox" Click="nodeCheckBox_Click">Enable Feature XYZ</CheckBox>
                <CheckBox x:Name="wwwCheckBox" Click="nodeCheckBox_Click">Enable Feature WWW</CheckBox>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
